<jsp:root xmlns:jsp="http://java.sun.com/JSP/Page"
          xmlns:c="http://java.sun.com/jsp/jstl/core" version="2.0">

    <jsp:directive.page contentType="text/html" pageEncoding="UTF-8"/>

    <!-- any content can be specified here, e.g.: -->
    <html>
        <head>
            <title>Cadastrar Usuário</title>
            <link href="cadastrarUsuarioStyle.css" rel="stylesheet" type="text/css"/>
        </head>
        <body>
            <div id="divPai">
                <form action="CadastroUsuarioServlet" method="post">
                    <fieldset>
                        <legend>Cadastrar Usuário</legend>
                        Cod Usuário
                        <input type="text" id="codUsuario" name="codUsuario" readonly="readonly"/>
                        <label for="nome">Nome&#42;</label>
                        <input type="text" id="nome" name="nome"/>
                        Sexo&#42;
                        <label for="sexoM">M</label>
                        <input type="radio" name="sexo" id="sexoM" value="M"/>
                        <label for="sexoF">F</label>
                        <input type="radio" name="sexo" id="sexoF" value="F"/><br/>

                        Data de Nascimento&#42;
                        <input type="date" id="nascimento" name="nascimento"/> 
                        <label for="funcao">Função&#42;</label>
                        <input type="text" id="funcao" name="funcao"/>
                        Tipo de Usuário&#42;
                        <select id="tipoUsuario" name="tipoUsuario">
                            <option>Vendedor</option>
                            <option>Gerente</option>
                            <option>Administrador</option>
                        </select><br/>
                        Filial&#42;
                        <select id="filial" name="filial" required="required" title="Filial">
                            <option selected="selected"></option>
                            <c:forEach items="${filiais}" var="fil">
                                <option>${fil.nome}</option>
                            </c:forEach>
                        </select><br/>

                        <label for="login">Login&#42;</label>
                        <input type="text" id="login" name="login"/>
                        <label for="senha">Senha&#42;</label>
                        <input type="password" id="senha" name="senha"/>
                        <input type="reset" name="novo"    value="Novo" class="novo"/>
                        <input type="submit" name="salvar" value="Salvar" class="salvar"/>
                        <a href="Principal"><button  type="button" class="sair" name="sair" title="Sair"></button></a>Sair<br/>

                    </fieldset>

                </form>

            </div>

        </body>
    </html>

</jsp:root>
